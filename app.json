{
  "expo": {
    "name": "ai-character-chat",
    "slug": "ai-character-chat",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": [
      "ios",
      "android"
    ],
    "icon": "./assets/images/icon.png",
    "scheme": "ai-character-chat",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.atlaskaisar.aicharacterchat",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to enable voice input"
      }
    },
    "android": {
      "permissions": [
        "RECORD_AUDIO"
      ],
      "package": "com.atlaskaisar.aicharacterchat"
    },
    "adaptiveIcon": {
      "foregroundImage": "./assets/images/adaptive-icon.png",
      "backgroundColor": "#ffffff"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
